# Variables d'environnement pour Railway - Configuration Simple

# Django
SECRET_KEY=your-secret-key-here

# Base de données MySQL Railway (automatiquement fournies par Railway)
MYSQLDATABASE=railway
MYSQLUSER=root
MYSQLPASSWORD=your-mysql-password
MYSQLHOST=your-mysql-host
MYSQLPORT=3306

# JSReport Service (service séparé sur Railway) - Optimisé Chrome Timeout
# IMPORTANT: L'URL doit inclure https:// pour Railway
JSREPORT_SERVICE_URL=https://your-jsreport-service.railway.app
JSREPORT_USERNAME=admin
JSREPORT_PASSWORD=your-jsreport-password
JSREPORT_TIMEOUT=300000

# Variables JSReport Service (à ajouter dans le service JSReport Railway)
# JSREPORT_CHROME_TIMEOUT=180000
# JSREPORT_CHROME_ARGS=--no-sandbox,--disable-dev-shm-usage,--disable-gpu
# JSREPORT_CHROME_POOL_SIZE=1
# NODE_ENV=production