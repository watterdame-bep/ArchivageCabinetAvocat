# Configuration pour Railway - Cabinet d'Avocats
# Copiez ce fichier en .env et remplissez les valeurs

# Django Configuration
DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-me
ALLOWED_HOSTS=*.railway.app,localhost,127.0.0.1

# Database MySQL - Variables individuelles Railway
MYSQLHOST=mysql.railway.internal
MYSQLPORT=3306
MYSQLUSERNAME=root
MYSQLPASSWORD=your-mysql-password
MYSQLDATABASE=railway

# JSReport Configuration (optionnel)
JSREPORT_URL=https://your-jsreport-instance.railway.app/api/report
JSREPORT_USERNAME=admin
JSREPORT_PASSWORD=your-jsreport-password
JSREPORT_TIMEOUT=60

# Sécurité HTTPS (Railway gère automatiquement HTTPS)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True